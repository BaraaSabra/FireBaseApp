<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditBook"
    android:orientation="vertical">


    <TextView
        android:id="@+id/catogre"
        android:layout_width="325dp"
        android:layout_height="53dp"

        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_baseline_category_24"
        android:hint="  Catogry"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/tvtName"
        android:layout_width="325dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_baseline_menu_book_24"
        android:hint="   Book Name"
        android:padding="10dp"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="325dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_baseline_person_outline_24"
        android:hint="   Author Name"
        android:padding="10dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvYear"
        android:layout_width="325dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_baseline_calendar_month_24"
        android:hint="   Release Year"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvPage"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_baseline_123_24"
        android:hint="   Pages Number"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="15dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnedite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        android:text="EDIT"

        android:background="@drawable/btn"
        android:textSize="18sp"
        android:textColor="@color/black" />


</LinearLayout>