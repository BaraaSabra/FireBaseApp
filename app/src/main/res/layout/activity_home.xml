<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imProfile"
        android:layout_width="77dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/ic_baseline_person_outline_24" />

    <ImageView
        android:id="@+id/Logout"
        android:layout_width="77dp"
        android:layout_height="54dp"
        android:layout_gravity="end"
        android:layout_marginTop="-50dp"
        app:srcCompat="@drawable/ic_baseline_logout_24" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardlibrary"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:clickable="true"
            android:foreground="@drawable/edittext"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_view_list_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="125dp"
                android:gravity="center"
                android:text="Library"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardfavorite"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="4000dp"
            android:clickable="true"
            android:foreground="@drawable/edittext"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_favorite_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="125dp"
                android:gravity="center"
                android:text="Favorites"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardaddnewbook"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:foreground="@drawable/edittext"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="10dp">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_note_add_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="125dp"
                android:text="Create Book"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardcreatecategory"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:foreground="@drawable/edittext"
            android:clickable="true"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="4000dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:alpha="1"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_edit_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="125dp"
                android:text="Write your book"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnCrach"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="30dp"
        android:text="Button" />

</LinearLayout>