<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="150dp"
        android:background="#E91E63" />

    <EditText
        android:id="@+id/catogre"
        android:layout_width="325dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_baseline_category_24"
        android:hint="  Catogry"
        android:padding="15dp"
        android:textColor="#171616"
        android:textColorHint="#050505"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/NameUpdate"
        android:layout_width="325dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="45dp"
        android:background="@drawable/edtext"
        android:drawableStart="@drawable/ic_baseline_menu_book_24"
        android:hint="   Book Name"
        android:padding="15dp"
        android:textColor="#171616"
        android:textColorHint="#050505"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/AuthorUpdate"
        android:layout_width="325dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edtext"
        android:drawableStart="@drawable/ic_baseline_person_outline_24"
        android:hint="   Author Name"
        android:padding="15dp"
        android:textColor="#171616"
        android:textColorHint="#050505"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/YearUpdate"
        android:layout_width="325dp"
        android:layout_height="53dp"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edtext"
        android:drawableStart="@drawable/ic_baseline_calendar_month_24"
        android:hint="   Release Year"
        android:inputType="number"
        android:padding="15dp"
        android:textColor="#171616"
        android:textColorHint="#050505"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/PageUpdate"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="45dp"

        android:layout_marginTop="5dp"
        android:background="@drawable/edtext"
        android:drawableStart="@drawable/ic_baseline_123_24"
        android:hint="   Pages Number"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#171616"
        android:textColorHint="#050505"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        android:text="Update"
        android:background="@drawable/btn"
        android:textSize="18sp"
        android:textColor="@color/black"/>

</LinearLayout>